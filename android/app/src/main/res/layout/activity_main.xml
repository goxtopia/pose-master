<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Camera Layer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.posturemonitor.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Status Card (Glassmorphism style) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#80000000"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#33FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_init"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/delta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensor_idle"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/timer_joints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Joints: 0.0s"
                        android:textColor="#4cd964"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/timer_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body: 0.0s"
                        android:textColor="#4cd964"
                        android:textSize="12sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/timer_gaze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaze: 0.0s"
                        android:textColor="#4cd964"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Main FAB -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="@string/btn_start"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            app:icon="@android:drawable/ic_media_play"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Camera Switch FAB (Mini) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:fabSize="mini"
            app:backgroundTint="#40FFFFFF"
            app:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Hide UI Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_hide_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:fabSize="mini"
            app:backgroundTint="#40FFFFFF"
            app:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_start"/>

        <!-- Restore UI Button (Initially Hidden) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_restore_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:fabSize="normal"
            app:backgroundTint="#2196F3"
            app:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_view"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Alert Overlay -->
        <TextView
            android:id="@+id/alert_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCFF0000"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:text="@string/alert_move"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Paused Indicator (Centered) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/paused_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#80000000"
            app:cardCornerRadius="24dp"
            app:strokeColor="#55FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="48dp"
                android:paddingVertical="32dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_media_pause"
                    app:tint="#FFFFFF"
                    android:alpha="0.8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_paused"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.2"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_tap_to_resume"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Sheet for Settings (Standard implementation inside ScrollView if CoordinatorLayout behavior is complex without behavior classes, but let's use a simpler persistent bottom panel logic or just a hidden layout for "minimalist") -->
    <!-- Ideally we use BottomSheetBehavior but that requires Java code attachment. Keeping it simple: A simplified settings panel at bottom, initially collapsed? -->
    <!-- Let's put settings in a CardView that is normally GONE, toggled by a small button next to Status? Or just at top right? -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settings_panel"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#90000000"
        app:cardCornerRadius="16dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/config_title"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp"
                    android:letterSpacing="0.1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_joints_time"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/input_joints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1500"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_body_time"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/input_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="1800"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_gaze_time"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/input_gaze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="120"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sensitivity"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"/>
                <SeekBar
                    android:id="@+id/seek_sensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#2196F3"
                    android:thumbTint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_motion_sens"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
                <SeekBar
                    android:id="@+id/seek_motion_sensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="60"
                    android:progressTint="#4CAF50"
                    android:thumbTint="#FFFFFF"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    app:dividerColor="#33FFFFFF"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_show_face"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_show_face"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#88FFFFFF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <Button
                        android:id="@+id/btn_advanced_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/btn_advanced"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#555555"
                        android:layout_marginEnd="8dp"/>
                    <Button
                        android:id="@+id/btn_statistics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/btn_stats"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#555555"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
